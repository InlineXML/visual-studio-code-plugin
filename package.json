{
  "name": "inlinexml",
  "displayName": "InlineXML",
  "description": "JSX-like syntax in C#",
  "version": "0.0.5",
  "type": "module",
  "publisher": "InlineXML",
  "engines": {
    "vscode": "^1.109.0"
  },
  "main": "./extension.cjs",
  "scripts": {
    "bundle": "node build.js",
    "watch": "node build.js --watch",
    "vscode:prepublish": "npm run bundle",
    "vscode:build": "npx @vscode/vsce package"
  },
  "repository": {
    "url": "https://github.com/InlineXML/visual-studio-code-plugin"
  },
  "activationEvents": [
    "onLanguage:inlinexml",
    "workspaceContains:**/*.xcs"
  ],
  "contributes": {
    "languages": [
      {
        "id": "inlinexml",
        "aliases": [
          "InlineXML",
          "C# Inline XML"
        ],
        "extensions": [
          ".xcs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "inlinexml",
        "scopeName": "source.inlinexml",
        "path": "./syntaxes/csharp.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "inlinexml.restartLSP",
        "title": "InlineXML: Restart Language Server"
      }
    ]
  },
  "dependencies": {
    "@types/unzipper": "^0.10.11",
    "node-fetch": "^3.3.2",
    "unzipper": "^0.12.3",
    "vscode-languageclient": "^9.0.1",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3",
    "vscode": "^1.1.37"
  },
  "files": [
    "extension.cjs",
    "extension.cjs.map",
    "syntaxes",
    "language-configuration.json",
    "README.md",
    "LICENSE.txt"
  ]
}
